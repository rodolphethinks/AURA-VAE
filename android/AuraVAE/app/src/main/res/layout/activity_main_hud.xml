<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard_gradient"
    android:keepScreenOn="true"
    android:padding="32dp">

    <!-- Mode Toggle (Tabs - Centered Pill) -->
    <LinearLayout
        android:id="@+id/modeSwitchContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_tab_container"
        android:padding="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tabFleet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Collection"
            android:textColor="#FFFFFF"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:background="@drawable/bg_tab_active"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tabAnalysis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anomaly Detection"
            android:textColor="#80FFFFFF"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:textSize="14sp"
            android:includeFontPadding="false"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>


    <!-- Divider -->
    <View
        android:id="@+id/centerDivider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginVertical="32dp"
        android:background="#33FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LEFT PANEL: CONTROLS -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.95"
        android:letterSpacing="0.15"
        android:text="AURA"
        android:textColor="#FFFFFF"
        android:textSize="72sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>
    
    <View
        android:layout_width="96dp"
        android:layout_height="2dp"
        android:background="#60A5FA"
        app:layout_constraintStart_toStartOf="@id/titleText"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        android:layout_marginTop="8dp"/>

    <!-- Glass Control Panel -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlPanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_glass_panel"
        android:elevation="8dp"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/centerDivider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText">

        <Button
            android:id="@+id/btnStartRecording"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/bg_glass_button"
            android:letterSpacing="0.2"
            android:text="START RECORDING"
            android:textColor="#F0FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtTimer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-light"
            android:text="00:00"
            android:textColor="#F0FFFFFF"
            android:textSize="64sp"
            app:layout_constraintBottom_toTopOf="@+id/txtTimerLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnStartRecording" />

        <TextView
            android:id="@+id/txtTimerLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:letterSpacing="0.3"
            android:text="ELAPSED TIME"
            android:textColor="#60FFFFFF"
            android:textSize="14sp"
            android:textAllCaps="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTimer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- RIGHT PANEL: HUD HUD -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hudPanel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="32dp"
        android:background="@drawable/bg_glass_panel"
        android:elevation="8dp"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/centerDivider"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lblSysStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="System Status"
            android:textColor="#E0FFFFFF"
            android:textSize="28sp"
            android:letterSpacing="0.05"
            android:fontFamily="sans-serif-light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Status Rows -->
        <LinearLayout
            android:id="@+id/statusContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/lblSysStatus">

            <!-- Item 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">
                <ImageView
                    android:id="@+id/dotFleet"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_status_dot_amber" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fleet Collection"
                    android:textColor="#B0FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"/>
                <TextView
                    android:id="@+id/statusFleet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STANDBY"
                    android:textColor="#B0FBBF24"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Item 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">
                <ImageView
                    android:id="@+id/dotSystem"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_status_dot_green" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="System Normal"
                    android:textColor="#B0FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOMINAL"
                    android:textColor="#E04ADE80"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
            
             <!-- Item 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="12dp">
                <ImageView
                    android:id="@+id/dotProcessing"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_status_dot_amber" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Data Processing"
                    android:textColor="#B0FFFFFF"
                    android:textSize="18sp"
                    android:layout_marginStart="16dp"/>
                <TextView
                    android:id="@+id/statusProcessing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDLE"
                    android:textColor="#B0FBBF24"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#20FFFFFF"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/statusContainer"/>

        <!-- Anomaly Section (Visible in Anomaly Mode) -->
        <LinearLayout
            android:id="@+id/anomalySection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ANOMALY SCORE"
                    android:textSize="14sp"
                    android:letterSpacing="0.2"
                    android:textColor="#90FFFFFF"/>
                <Space android:layout_width="0dp" android:layout_height="1dp" android:layout_weight="1"/>
                <TextView
                     android:id="@+id/lblNormalRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Normal Range"
                    android:textSize="14sp"
                    android:letterSpacing="0.1"
                    android:textColor="#60FFFFFF"/>
            </LinearLayout>
            
            <TextView
                android:id="@+id/txtAnomalyScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--%"
                android:textSize="48sp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:layout_marginBottom="8dp"/>
                
            <ProgressBar
                android:id="@+id/progressAnomaly"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:progressDrawable="@drawable/bg_glass_panel"
                android:progressTint="#4ADE80"
                android:backgroundTint="#20FFFFFF"
                android:progress="0"
                android:secondaryProgress="23"/>
                
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="0%" android:textColor="#40FFFFFF" android:textSize="12sp" android:layout_weight="1"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="25%" android:textColor="#40FFFFFF" android:textSize="12sp" android:layout_weight="1" android:gravity="center"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="50%" android:textColor="#40FFFFFF" android:textSize="12sp" android:layout_weight="1" android:gravity="center"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="75%" android:textColor="#40FFFFFF" android:textSize="12sp" android:layout_weight="1" android:gravity="center"/>
                <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:text="100%" android:textColor="#40FFFFFF" android:textSize="12sp" android:layout_weight="1" android:gravity="end"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>